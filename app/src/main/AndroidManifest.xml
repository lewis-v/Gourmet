<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yw.gourmet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 主界面 -->
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait" />
        <!-- 个人中心 -->
        <activity
            android:name=".ui.personal.PersonalActivity"
            android:screenOrientation="portrait" />
        <!-- 登录 -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait" />
        <!-- 设置界面 -->
        <activity
            android:name=".ui.set.SetActivity"
            android:screenOrientation="portrait" />
        <!-- 引导页 -->
        <activity
            android:name=".ui.flash.FlashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 修改个人信息 -->
        <activity
            android:name=".ui.changeDetail.ChangeDetailActivity"
            android:screenOrientation="portrait" />
        <!-- 照片选择.剪裁 -->
        <activity
            android:name="cn.finalteam.rxgalleryfinal.ui.activity.MediaActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Orange" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Orange" />
        <!-- 普通分享 -->
        <activity
            android:name=".ui.share.common.CommonShareActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.share.diary.DiaryActivity"></activity>
    </application>

</manifest>