<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/close"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/img_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/tv_name"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/img_header"
        app:layout_constraintLeft_toLeftOf="@+id/img_header"
        app:layout_constraintRight_toRightOf="@+id/img_header"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="数据库几点开始将点击"/>

    <TextView
        android:id="@+id/tv_tip"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_apply"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_reject"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/phone_apply"
        android:tint="@color/white"
        android:padding="10dp"
        android:background="@drawable/circle_red_dark"
        android:layout_marginBottom="60dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <ImageView
        android:id="@+id/img_reject"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_apply"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/voice_chat_icon"
        android:tint="@color/white"
        android:padding="10dp"
        android:background="@drawable/circle_red_dark"
        android:layout_marginBottom="60dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />
</android.support.constraint.ConstraintLayout>