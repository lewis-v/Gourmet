<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_back"
    tools:context="com.yw.gourmet.ui.main.MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:contentInsetStart="0dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/my"
                android:textColor="@color/word_black"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/tv_set"
                android:text="@string/setting"
                android:gravity="center"
                android:background="@drawable/ll_back_change"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/word_black"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:background="@mipmap/dev"
        android:layout_marginBottom="5dp"
        android:rotation="180"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <ScrollView
        android:id="@+id/scroll_my"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="@color/dev"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/ll_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ll_back_change"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_header"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="昵称"
                    android:textColor="@color/word_black"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/chevron_right" />
            </LinearLayout>
            <LinearLayout
                android:background="@color/dev"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_share"
                    android:layout_width="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/ll_back_change"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_share"
                        android:text="@string/test_num"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/word_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="13sp"
                        android:text="@string/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_diary"
                    android:layout_width="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/ll_back_change"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_diary"
                        android:text="@string/test_num"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/word_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="13sp"
                        android:text="@string/diary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_menu"
                    android:layout_width="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/ll_back_change"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_menu"
                        android:text="@string/test_num"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/word_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="13sp"
                        android:text="@string/menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_raiders"
                    android:layout_width="0dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/ll_back_change"
                    android:gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_raiders"
                        android:text="@string/test_num"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                        android:textColor="@color/word_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="13sp"
                        android:text="@string/raiders"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:background="@color/dev"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/ll_top"
                android:background="@drawable/ll_back_change"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:background="@drawable/top_back"
                    android:src="@drawable/top"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:text="@string/top"
                    android:textSize="16sp"
                    android:textColor="@color/word_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/chevron_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/dev"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/ll_collection"
                android:background="@drawable/ll_back_change"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/collection"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:text="@string/collection"
                    android:textSize="16sp"
                    android:textColor="@color/word_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/chevron_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/dev"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
            <LinearLayout
                android:id="@+id/ll_comment"
                android:background="@drawable/ll_back_change"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/my_good"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:text="@string/my_comment"
                    android:textSize="16sp"
                    android:textColor="@color/word_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/chevron_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/dev"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/ll_reject"
                android:background="@drawable/ll_back_change"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/my_good"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:text="@string/reject_share"
                    android:textSize="16sp"
                    android:textColor="@color/word_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/chevron_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:background="@color/dev"
                android:layout_width="match_parent"
                android:layout_height="1px"/>


            <LinearLayout
                android:id="@+id/ll_customer_service"
                android:background="@drawable/ll_back_change"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/customer_service"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:text="@string/customer_service"
                    android:textSize="16sp"
                    android:textColor="@color/word_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/chevron_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:background="@color/dev"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <LinearLayout
                android:id="@+id/ll_draft"
                android:background="@drawable/ll_back_change"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/draft"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:text="@string/draft"
                    android:textSize="16sp"
                    android:textColor="@color/word_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@drawable/chevron_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:background="@color/dev"
                android:layout_width="match_parent"
                android:layout_height="1px"/>
        </LinearLayout>

    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraint_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_tip"
            android:text="@string/my_tip"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/constraint_my"
            app:layout_constraintBottom_toBottomOf="@+id/constraint_my"
            app:layout_constraintRight_toRightOf="@+id/constraint_my"
            app:layout_constraintLeft_toLeftOf="@+id/constraint_my"
            app:layout_constraintVertical_bias="0.3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_tip"
            android:gravity="center">

            <Button
                android:id="@+id/bt_register"
                android:text="@string/register"
                android:layout_marginRight="20dp"
                android:textColor="@android:color/white"
                android:background="@drawable/back_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/bt_login"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"
                android:background="@drawable/back_change"
                android:text="@string/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
